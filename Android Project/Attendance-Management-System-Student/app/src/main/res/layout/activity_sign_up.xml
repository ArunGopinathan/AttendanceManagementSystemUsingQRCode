<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.blogspot.aruncyberspace.attendance_management_system_student.SignUpActivity">


        <ImageView
            android:id="@+id/logo_image_small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:padding="15dp"
            android:src="@mipmap/logo_small" />
        <ProgressBar
            android:layout_width="wrap_content" android:padding="10dp" android:layout_gravity="center"
            android:layout_height="wrap_content" android:id="@+id/login_progress" android:visibility="gone" />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo_image_small"
            android:layout_marginBottom="3dp"
            android:hint="@string/prompt_first_name"
            android:padding="15dp" />

        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo_image_small"
            android:hint="@string/prompt_last_name"
            android:padding="15dp" />

        <EditText
            android:id="@+id/txtMavEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo_image_small"
            android:hint="@string/prompt_mav_email"
            android:padding="15dp" />


        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo_image_small"
            android:hint="@string/prompt_password"
            android:padding="15dp"
            android:password="true" />

        <EditText
            android:id="@+id/txtConfirmPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/prompt_confirm_password"
            android:padding="15dp"
            android:password="true" />

        <EditText
            android:id="@+id/txtAndroidDeviceId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo_image_small"
            android:hint="@string/prompt_device_id"
            android:padding="15dp" />


        <Button
            android:id="@+id/mav_sign_up_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="15dp"
            android:text="@string/btn_mav_sign_up_text" />

    </LinearLayout>
</ScrollView>


